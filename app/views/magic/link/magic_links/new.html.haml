- content_for :title do
  Request Magic Link | #{app_name}

.col-md-10.col-sm-12.col-xs-12.col-md-offset-1.col-sm-offset-0.col-xs-offset-0
  .col-md-offset-3.col-md-6.col-sm-6.p-lg
    = form_for @magic_link do |f|
      .form-group
        %i.glyphicon.glyphicon-user
        = f.email_field :email, class: 'form-control login', placeholder: 'Email', autofocus: true, autocomplete:"on", autocompletetype:"email"
      %button.btn.btn-warning{type: 'submit'} Send me Magic Link

<% if @project.errors.present? %>
  toastr.error("<%= @project.errors.full_messages.to_sentence %>")
<% else %>
  $('#project_details').html("<%= escape_javascript render( partial: '/network/projects/project_details') %>");
  $(".project-card").removeClass('current');
  $("#project_<%= @project.id %>").addClass('current');
  // $("html, body").animate({ scrollTop: 0 }, "slow");
<% end %>

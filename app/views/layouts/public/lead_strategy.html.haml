!!!
%html
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type'}
    %meta{charset: 'utf-8'}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no", :name => "viewport"}/
    %meta{content: 'yes', name: 'apple-mobile-web-app-capable'}
    %meta{content: 'yes', name: 'apple-touch-fullscreen'}
    %meta{content: 'Click admin dashboard', name: 'description'}
    %meta{content: 'Clickx', name: 'author'}

    %title= yield(:title)

    = stylesheet_link_tag 'themeX_base', media: 'all', 'data-turbolinks-track': false
    = stylesheet_link_tag 'public/lead_strategy', media: 'all', 'data-turbolinks-track': false
    = stylesheet_link_tag 'public/lead_strategy_carousel', media: 'all', 'data-turbolinks-track': false
    = stylesheet_link_tag 'public/jquery.mCustomScrollbar.min', media: 'all', 'data-turbolinks-track': false
    = stylesheet_link_tag 'public/slick', media: 'all', 'data-turbolinks-track': false
    = stylesheet_link_tag 'public/slick-theme', media: 'all', 'data-turbolinks-track': false
    %link{href: 'https://unpkg.com/swiper/swiper-bundle.min.css', rel: 'stylesheet'}

    = javascript_include_tag 'plain', 'data-turbolinks-track': true
    = javascript_include_tag 'public/lead_strategy', 'data-turbolinks-track': true
    = javascript_include_tag 'public/jquery.mCustomScrollbar.concat.min', 'data-turbolinks-track': true
    = javascript_include_tag 'public/slick.min', 'data-turbolinks-track': true
    = javascript_include_tag 'public/strategy', 'data-turbolinks-track': true
    %script{src: 'https://unpkg.com/swiper/swiper-bundle.min.js'}

    = csrf_meta_tags
    = render partial: "layouts/favicon", locals: { agency_logo: @lead.agency.favicon }

  %body.animated-content
    = yield

.pb-md.page-heading.no-margin-bottom
  %h1 Site Audit
  %i.fa.fa-info-circle.tooltip-text-icon.tooltip-text-icon-pos{ 'title': 'This tool helps you analyze your site pages taking on-Page SEO, crawlability, backlinks and keywords into consideration. It lets you easily know how good your pages are optimized for SEO. It gives you suggestions on the things you can improve and the things that need your immediate attention.', 'title-direction': 'bottom' }
  .options
    .inlineb.mr-md
      %span.text-info.pr-sm{ 'ng-if': 'updated_at' }
        [ as of {{updated_at}} ]

.container-fluid
  %div
    .row
      .col-sm-12{'st-table':'overViews', 'st-pipe':'stTableServer', 'trigger-st-table-after-events':''}
        .panel.panel-default
          .panel-body{ 'ng-init': "loadTemplate('pages')" }
            %ul.nav.nav-tabs.material-nav-tabs.mb-lg.menu.overview{ 'ng-show': '!uncrawled' }
              %li{ 'role': 'presentation', 'ng-class': "{ 'active': settings_tab == template }",
                'ng-repeat': 'template in templates' }
                %a{ 'ng-click': 'loadTemplate(template)' } {{ template | humanize }}
              %li.pull-right{ 'ng-show': "settings_tab == 'pages'" }
                .dropdow.inlineb
                  %h4.text-left.inlineb.mr-md
                    %small{ 'st-summary': '', 'number-Of-rows': 'st_per_page' }
                  %button.btn.btn-default.m-n.btn-raised.dropdown-toggle{"data-toggle" => "dropdown", :type => "button" }
                    {{limit_overview_rows == 1? 'All': limit_overview_rows}}
                    %span.caret
                  %ul.dropdown-menu
                    %li.p-sm
                      %a{ 'ng-click': 'limit_overview_rows = totalPageSize' } All
                    %li.p-sm
                      %a{ 'ng-click': 'limit_overview_rows = 10' } 10
                    %li.p-sm
                      %a{ 'ng-click': 'limit_overview_rows = 20' } 20
                    %li.p-sm
                      %a{ 'ng-click': 'limit_overview_rows = 50' } 50
              %li.pull-right{ 'ng-show': "settings_tab == 'pages'" }
                .dropdow.inlineb
                  %h4.text-left.inlineb.mr-md
                    %small Sort By:
                  %button.btn.btn-default.m-n.btn-raised.dropdown-toggle.mr-md{"data-toggle" => "dropdown", :type => "button" }
                    {{sort_by_item[sort_by]}}
                    %span.caret
                  %ul.dropdown-menu
                    %li.p-sm
                      %a{ 'ng-click': "sort_by = 'traffic_metrics'" } Visits
                    %li.p-sm
                      %a{ 'ng-click': "sort_by = 'errors_count'" } Errors
                    %li.p-sm
                      %a{ 'ng-click': "sort_by = 'warning_count'" } Warnings
                    %li.p-sm
                      %a{ 'ng-click': "sort_by = 'keywords'" } Keywords
                    %li.p-sm
                      %a{ 'ng-click': "sort_by = 'backlinks_count'" } Links
                    %li.p-sm
                      %a{ 'ng-click': "sort_by = 'readability_score'" } Readability
              %li.pull-right{ 'ng-if': "settings_tab == 'pages'" }
                .form-group.m-n.p-n
                  .pl-n.input-group
                    %span.input-group-addon.formfldic
                      %i.material-icons search
                    %input#search-table.form-control.col-sm-5.cus6in.pl-lg{ 'st-search': '' ,
                    'placeholder': 'Global Search', 'type': 'search' }
            .tab-content
              .settings{ 'ng-include': '', 'src': 'current_template' }

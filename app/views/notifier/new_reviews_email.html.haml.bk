%body{:bgcolor => "#f7f8f9", :style => "margin:0;padding:0; font-family:'Helvetica Neue', Helvetica, Helvetica, Arial, sans-serif;", :yahoo => ""}
  %table{:align => "center", :bgcolor => "#fff", :border => "0", :cellpadding => "0", :cellspacing => "0",:style => "width: 100%; max-width: 700px;"}
    %tbody
      %tr
        %td{style:"padding: 10px;background:transparent"}
          %table{:style => "width: 100%; max-width: 680px; margin-top: 0; padding-bottom: 0; border-radius: 0;  border: 2px solid #f3f3f3;"}
            %tbody
              %tr
                %td{:align => "center", :style => "padding: 40px 30px; text-align: center; border-spacing: 20px 10px;"}
                  %img{:alt => "", style: 'max-height: 35px', :src => "https://s3.amazonaws.com/clickx-images/Clickx-Logo.png", :width => "180"}
              %tr{:bgcolor => "#f7af30"}
                %td{:align => "center", :style => "text-align: center;"}
                  %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                    %tbody
                      %tr
                        %td{:style => "color: #FFF; font-size: 28px; line-height: 28px; font-weight: bold; padding: 20px 0 10px;"}
                          Your Daily Reviews
                      %tr
                        %td{:style => "color: #FFF; font-size: 18px; line-height: 18px; font-weight: bold; padding: 0 0 20px;"}
                          %small
                            =Date.today
              %tr
                %td
                  %table{style:"width:100%"}
                    -@reviews.each do |review|
                      %tr
                        %td
                          %table{style:"max-width:498px;margin: 0 auto; border: 2px solid #eee; padding: 1px"}
                            %tr
                              %td
                                %table{:style => "width: 100%; border-collapse: collapse; max-width: 450px; margin: 0 auto;padding: 4px 0;"}
                                  %tbody
                                    %tr{:bgcolor => "#f5f5f5"}
                                      %td{:style => "width: 50px;"}
                                        %img{:alt => "google+", :src => "https://s3.amazonaws.com/clickx-images/directories/#{review.directory}.png", :style => "padding-left: 10px;", :width => "20"}
                                      %td{:style => "font-size: 16px;"}
                                        =review.timestamp.strftime("%m/%e/%Y")
                                      %td{:style => "font-size: 16px;"}
                                        - if review.author
                                          =review.author
                                        - else
                                          =review.email
                            %tr
                              %td
                                %table{:style => "width: 100%; border-collapse: collapse; max-width: 450px; margin: 0 auto 10px; font-size: 13px; line-height: 13px;"}
                                  %tbody
                                    %tr
                                      %td{:style => "width: 50%; text-align: left; padding: 10px; line-height: 190%;text-indent:50px"}
                                        =review.text


              %tr
                %td
                  %table{:bgcolor => "#f7f8f9", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                    %tbody
                      %tr
                        %td{:style => "width: 30%;color: #646464; font-size: 28px; line-height: 28px; font-weight: bold; padding: 40px 0 10px 0; text-align:center;"}
                          \&nbsp;
                        %td{:bgcolor => "#f7af30", :style => "width: 40%;color: #646464; font-size: 18px; line-height: 21px;text-align:center;border: 20px solid #f7f8f9"}
                          %a{:href => "http://app.clickx.io", :style => "color: #fff; text-decoration: none;"} Login to Dashboard
                        %td{:style => "width: 30%;color: #646464; font-size: 28px; line-height: 28px; font-weight: bold; padding: 40px 0 10px 0; text-align:center;"}
                          \&nbsp;
              %tr
                %td
                  %table{:bgcolor => "#424554", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                    %tbody
                      %tr
                        %td{:align => "center", :style => "color: #FFF; text-align: center; padding: 15px 0 5px;"}

                          %a{:href => "#{ENV['ROOT_URL']}/email_settings", :style => "color: #FFF; font-size: 12px;padding-left:3px"} Change Email Settings
                      %tr
                        %td{:align => "center", :style => "font-size: 12px; color: #FFF; text-align: center; padding: 5px 0 15px;"}
                          © #{Time.now.year} Clickx  •  233 S Wacker Dr.  •  Suite 8400  •  Chicago, IL 60606

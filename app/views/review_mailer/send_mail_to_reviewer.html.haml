                %span{:style => "font-weight:600;"}= @business.name
                %span{:style => "color:#d2d7dc;"} &#160;&#160;|&#160;&#160;
                %a{href: @business.domain, rel: 'noreferrer', style: "color:#393E61;text-decoration:none;", target: "_blank"}= @business.domain
            %tr
              %td{:align => "center", :colspan => "4", :style => "font-family:Arial, sans-serif;"}
                = @location.loc_address

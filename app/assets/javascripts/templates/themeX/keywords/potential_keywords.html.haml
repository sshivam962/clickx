.pb-md.page-heading.no-margin-bottom.competitors-list.competitors-header
  %h1
    %i.clickx-icon-Marketing.title-icon
    Keyword Opportunities
.container-fluid
  %div
    %md-content
      %md-tabs{ 'md-border-bottom': '', 'md-dynamic-height': '' }
        %md-tab{ 'label': 'From Organic Traffic' }
          %md-content.mt-md
            .col-md-12
              %p.clx-text.text-color-accent-red.text-center{ 'ng-if': 'organicKeywords.length == 0' }
                No Data Available
              .tab-content{ 'st-table': 'organicKeywords', 'st-safe-src': 'allOrganicKeywords',
                'ng-if': 'organicKeywords.length > 0' }
                .table-responsive
                  %table.table.table-bordered.table-vam.table-hover.mb-n
                    %thead
                      %tr
                        %th Keyword
                        %th.text-center Keyword Count
                        %th.text-center Add to Keywords
                    %tbody
                      %tr{ 'ng-repeat': 'keyword in organicKeywords' }
                        %td
                          {{keyword.keyword}}
                        %td.text-center
                          {{keyword.keyword_count}}
                        %td.text-center
                          %a
                            %i.fa.fa-plus{ 'ng-click': 'addToKeyword($index, "organicKeywords")' }
                    %tfoot
                      %tr
                        %th{ colspan:3 }
                          .text-center.p-n.mgl-33{ 'ng-include': '', src: "'themeX/shared/_pagination_links.html'" }
        %md-tab{ 'label': 'From Paid Traffic' }
          %md-content.mt-md
            .col-md-12
              %p.clx-text.text-color-accent-red.text-center{ 'ng-if': 'paidKeywords.length == 0' }
                No Data Available
              .tab-content{ 'st-table': 'paidKeywords', 'st-safe-src': 'allPaidKeywords',
                'ng-if': 'paidKeywords.length > 0' }
                .table-responsive
                  %table.table.table-bordered.table-vam.table-hover.mb-n
                    %thead
                      %tr
                        %th Keyword
                        %th.text-center Keyword Count
                        %th.text-center Add to Keywords
                    %tbody
                      %tr{ 'ng-repeat': 'keyword in paidKeywords' }
                        %td
                          {{keyword.keyword}}
                        %td.text-center
                          {{keyword.keyword_count}}
                        %td.text-center
                          %a
                            %i.fa.fa-plus{ 'ng-click': 'addToKeyword($index, "paidKeywords")' }
                    %tfoot
                      %tr
                        %th{ colspan:3 }
                          .text-center.p-n.mgl-33{ 'ng-include': '', src: "'themeX/shared/_pagination_links.html'" }

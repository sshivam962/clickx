%html
  %head
    %h1 Referring Domains
    = wicked_pdf_stylesheet_link_tag 'wicked_pdf'
  %body
    %table-responsive
      %table.table.table-bordered.table-vam.table-left
        %thead
          %th REFERRING DOMAINS
          %th PRIMARY TOPICAL TF
          %th BACKLINKS
          %th ALEXA RANK
          %th TF
          %th CF
        %tbody
          - @ref_domains_data.each do |domain_data|
            %tr
              %td
                = domain_data.referring_domains
              %td
                = domain_data.primary_topical_tf
              %td
                = domain_data.backlinks
              %td
                = domain_data.alexa_rank
              %td
                = domain_data.trust_flow
              %td
                = domain_data.citation_flow


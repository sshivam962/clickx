$('.lead_source_item').removeClass('bg-blue text-white')
$(".lead_source_item").removeClass('current-item');
$("#lead_source_<%=@lead_source.id%>").addClass('current-item');
$('#lead_source_leads').html("<%= escape_javascript render( partial: 'direct_leads_list', locals: { lead_source: @lead_source}) %>")
$('#lead-source-email-templates').html("<%= escape_javascript render( partial: 'email_templates', locals: { email_templates: @email_templates } ) %>")

var winWidth = $(window).width();
if(winWidth < 1199) {
  if(!$('body').hasClass('sidebar-collapsed')) {
    // $('.lead_source_wrapper').addClass('source_view');
    $('#lead_source_list').hide();
    $('#lead_source_details').show();
  }
}
if(winWidth < 991) {
  $('#lead_source_list').hide();
  $('#lead_source_details').show();
  // $('.lead_source_wrapper').addClass('source_view');
}

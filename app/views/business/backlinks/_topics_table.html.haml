.panel.panel-default
  .panel-body.p-n.pt-md
    .col-md-12
      .col-sm-12.p-n
        .table-responsive
          %table.table.table-hover.table-vam.table-striped.text-muted
            %thead
              %tr
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Trust flow of your site for the topics." }
                    = link_to 'TRUST FLOW', topics_business_backlinks_path(order_by: 'TopicalTrustFlow', order: sort_order), style: 'color:#949494;', remote: true
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Top topics of your site based on the topical relevancy of the backlinks you have." }
                    = link_to 'TOPIC', topics_business_backlinks_path(order_by: 'Topic', order: sort_order), style: 'color:#949494;', remote: true
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Number of backlinks in the given topics." }
                    = link_to 'EXTERNAL BACKLINKS', topics_business_backlinks_path(order_by: 'Links', order: sort_order), style: 'color:#949494;', remote: true
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Number of referring domains to the backlinks of your site in given Topics." }
                    = link_to 'LINKED FROM REFERRING DOMAINS', topics_business_backlinks_path(order_by: 'LinksFromRefDomains', order: sort_order), style: 'color:#949494;', remote: true
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Number of referring domains in the given topics." }
                    = link_to 'REFERRING DOMAINS', topics_business_backlinks_path(order_by: 'RefDomains', order: sort_order), style: 'color:#949494;', remote: true
            %tbody
              - @topics.each do |topic|
                %tr
                  %td
                    = topic.topical_trust_flow
                  %td
                    = topic.topic
                  %td
                    = topic.links
                  %td
                    = topic.links_from_ref_domains
                  %td
                    = topic.ref_domains

    .ui-2020
      .row.pagination-wrapper
        .pagination
          = will_paginate @topics

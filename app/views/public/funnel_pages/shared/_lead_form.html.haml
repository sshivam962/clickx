.col-md-6.col-12
  - if @agency_niche&.lead_form.present?
    = raw(@agency_niche.lead_form)
  - else
    .banner-right-form
      %h2 Request Your Custom Strategy
      = form_for @agency.leads.new, url: create_lead_funnel_pages_path(agency_id: @agency.obfuscated_id), method: :post, class: 'form-vertical cardy clickx-parsley',"data-parsley-validate": '' do |f|
        .row
          .col-md-6.col-12
            .form-group
              = f.text_field :first_name, class: 'form-control', placeholder: 'First Name'
          .col-md-6.col-12
            .form-group
              = f.text_field :last_name, class: 'form-control', placeholder: 'Last Name'
          .col-md-12.col-12
            .form-group
              = f.email_field :email, class: 'form-control', placeholder: 'Your Email'
          .col-md-12.col-12
            .form-group
              = f.phone_field :phone, class: 'form-control', placeholder: 'Your Phone Number'
          .col-md-12.col-12
            = hidden_field_tag :niche_name, @funnel_page.industry.title 
            %button.btn.btn-primary.btn-block{type: 'submit'}
              Request Your Custom Strategy
              %i.fa.fa-paper-plane

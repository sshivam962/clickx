%html
  %head
    %h1 Search Analytics
    = wicked_pdf_stylesheet_link_tag 'wicked_pdf'
    %body
      %table-responsive
        %table.table.table-bordered.table-vam.table-left
          %thead
            %th Date
            %th Users
            %th Pages/Session
            %th Avg. Session Duration
            %th % New Sessions
            %th Bounce Rate
          %tbody
            - @data.decorated_chart_data do |analytics|
              %tr
                %td.align-center
                  = analytics.formatted_date
                %td.align-center
                  = analytics.users_count
                %td.align-center
                  = analytics.pages_per_session
                %td.align-center
                  = analytics.avg_session_duration
                %td.align-center
                  = analytics.new_sessions
                %td.align-center
                  = analytics.bounce_rate
      %table-responsive
        %table.table.table-bordered.table-vam.table-left
          %thead
            %th Keyword
            %th Users
            %th Pages/Session
            %th Avg. Session Duration
            %th % New Sessions
            %th Bounce Rate
          %tbody
            %tr
              %td.align-center
                = @data.keyword
              %td.align-center
                = @data.visits
              %td.align-center
                = @data.page_per_session
              %td.align-center
                = @data.avg_session
              %td.align-center
                = @data.new_visits
              %td.align-center
                = @data.bounce


%table{:align => "center", :bgcolor => "#F5F7FA", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
  %tr
    %td{:valign => "top", :width => "100%"}
      %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
        %tr
          %td{:width => "100%"}
            %table.table_scale{:bgcolor => "#FFF", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tr
                %td{:align => "center", :width => "100%"}
                  %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                    %tr
                      %td.spacer{:width => "30"}
                      %td{:width => "540"}
                        / START OF COLUMN
                        %table.full{:align => "center", :border => "0", :cellpadding => "10", :cellspacing => "0", :style => "border-collapse:collapse; mso-table-lspace:0pt; mso-table-rspace:0pt;", :width => "540"}
                          %tr.cellpadd10{:style => "margin-bottom: 15px"}
                            %td
                              %p Questionnaire Updated by : #{@current_user.name}
                              %h1.subhead.head-st-2{style: 'font-size: 20px;'}#{@questionnaire.business.name} updated his Questionnaire
                              %table.layout.display.responsive-table
                                %thead
                                  %tr
                                    %th Question
                                    %th{:colspan => "2"} Answer
                                %tbody
                                  - @questionnaire.answers.each do |ans|
                                    - question = ans.question
                                    %tr
                                      %td.organisationnumber #{ question.question }
                                      %td.organisationname #{ ans.my_ans }


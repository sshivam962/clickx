<% if @question.errors.present? %>
  toastr.error("<%= @question.errors.full_messages.to_sentence %>")
<% else %>
  toastr.success("Question Created");
  $('.questions').prepend("<%= escape_javascript render( partial: 'super_admin/inquiry/questions/shared/question', locals: { question: @question }) %>");
  $('#new-question-modal').modal('hide')
<% end %>

<% if @project.errors.present? %>
  toastr.error("<%= @project.errors.full_messages.to_sentence %>")
<% else %>
  $('#project_details').html("<%= escape_javascript render( partial: '/agency/projects/project_details') %>");
  $(".project-card").removeClass('active');
  $("#project_<%= @project.id %>").addClass('active');
  //$("html, body").animate({ scrollTop: 0 }, "slow");
<% end %>

!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge', 'http-equiv': 'X-UA-Compatible'}
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type'}

    %title= yield(:title) || app_name

    %script{src: 'https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js'}
    %script{src: 'https://cdnjs.cloudflare.com/ajax/libs/jquery-ujs/1.2.2/rails.min.js'}
    %link{href: "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel: "stylesheet", integrity: "sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin: "anonymous"}
    %script{src: "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity: "sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin: "anonymous"}
    %link{href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel: "stylesheet", integrity: "sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin: "anonymous"}
    = stylesheet_link_tag 'devise', media: 'all', 'data-turbolinks-track': true
    - if white_labeled_client? && current_tenent.favicon.present?
      = favicon_link_tag asset_path(current_tenent.favicon), rel: 'icon', type: "image/x-icon"

    = csrf_meta_tags
    / HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      %script{:src => "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"}
      %script{:src => "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"}

    = stylesheet_link_tag "https://www.authy.com/form.authy.min.css"
    = javascript_include_tag 'devise', 'data-turbolinks-track': true
    = stylesheet_link_tag 'plain', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag "https://www.authy.com/form.authy.min.js"
    = render 'shared/google_analytics'
  %body
    - marketing_portal = request.host.eql?('app.marketingportal.us')
    .row-fluid.login-page.login-bg
      .container
        .wrap
          .login-form-cover
            .login-form
              .col-md-12
                .logo
                  - if white_labeled_client?
                    = image_tag current_tenent.logo, width: '200px', weight: '40px' if current_tenent.logo
                  - elsif marketing_portal
                  - else
                    = image_tag 'clickx-logo-white.svg'
                = render 'shared/devise_alerts'
              = yield
    = render 'public/shared/contact_us'


- agency = @lead.agency
.header-wrapper{style: "background:#{agency.strategy_product_header_color}"}
  .container.container--sm.text-center
    - if agency.weburl.present?
      %a{href: formatted_url(agency.weburl), target: '_blank'}
        = image_tag agency.logo || ''
    - else
      = image_tag agency.logo || ''
.default-strategy
  = render "public/lead/strategies/static/#{@category}", agency: agency

- unless @category.eql?('linkedin_ads')

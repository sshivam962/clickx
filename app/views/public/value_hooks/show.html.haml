- content_for :custom_assets do
  = stylesheet_link_tag 'themeX_base', media: 'all', 'data-turbolinks-track': false
  = stylesheet_link_tag 'public/public_pages', media: 'all', 'data-turbolinks-track': false
  %link{href: 'https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css', rel: 'stylesheet'}
- content_for :title do
  = @agency.name
.public-page-wrapper
  .horizontal-align.text-center{style: "background:#{@agency.case_study_portfolio_header_color}"}
    .pt-xl.pb-xl
      .page-logo-wrapper
        - if @agency.weburl.present?
          %a{href: formatted_url(@agency.weburl), target: '_blank'}
            = image_tag @agency.logo || '', class: 'img-responsive'
        - else
          = image_tag @agency.logo || '', class: 'img-responsive'

  .section.py-5.mt-md.bg-muted.text-muted
    .container.container-sm.text-center.px-xl-5
      .pb-3.pt-4
        %h1.m-0.fs-md.fs-md-30.fs-lg-lg
          = @value_hook.internal_title
      -if @value_hook.video_embed_code.html_safe.present?
        .p-4.my-5.mx-xl-5.video-embed-wrapper
          = @value_hook.video_embed_code.html_safe
    - if raw(@agency.calendly_script).present?
      .section.py-5.mt-md.bg-white.text-muted
        .container.container--sm.pt-5
          %h3.f-w-lg.text-center Schedule a Call
          = raw(@agency.calendly_script)
.section.bg-muted.text-muted.public-page-footer
  .container.container--sm
    .py-4.text-center
      %p.m-0
        = "Â© #{Date.current.year} #{@agency.name}. All Rights Reserved."

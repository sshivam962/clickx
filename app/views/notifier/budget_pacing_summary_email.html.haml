%table{:align => "center", :bgcolor => "#F5F7FA", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
  %tr
    %td
      %table{width: "100%"}
        %tr
          %td
            %h2{style:"text-align:center"} #{@type} Budget Pacing Report - #{Date.current.strftime("#{Date.current.day.ordinalize} %B, %Y")}
        - @budget_pacing_biz_details.each do |bp|
          - budget_left = bp[:budget_left]
          %table{width: "100%"}
            %tr
              %td
                %p{style:"text-align:center;font-size:20px;font-weight:bold"}
                  #{bp[:biz_name]}
                %p{style:"text-align:center"}
                  %div
                  %br
                    Budget          :
                    %b $#{bp[:budget]}
                  - if bp[:error]
                    %br
                      Error           :
                      %b $#{bp[:error_msg]}
                  - else
                    %br
                      Spend           :
                      %b $#{bp[:budget_spend]}
                    %br
                      Days Left       :
                      %b #{@days_left}
                    %br
                      Insight         :
                      %b You have $#{budget_left} left to be spend over the next #{@days_left} days. You should be spending $#{bp[:to_be_spend]} per day.
                    %br
                  %br


.bg-sky-blue.p-lg-5.p-4.rounded.border-1.border-blue
  .niche-list.niche-list--default.niche-list--preloader
    - if @industries.present?
      - (@industries.to_a - [Industry.other]).each do |industry|
        - next if industry.case_studies.published.size.zero?
        - if industry.funnel_page.present?
          = render 'niche_item', has_access: has_access, industry: industry, my_case_study: 0, favorite: false, industries_ids: industries_ids
    - else
      %i.fa.fa-exclamation-triangle.mr-3.text-warning
      %span.fs-xxs
        Error - No Items Found

.header.no-bottom-border
  %h1=(t "devise.invitations.new.header").titleize

- content_for :title do
  Invite New User

.login-form
  = form_for(resource, as: resource_name, url: invitation_path(resource_name), html: {method: :post}) do |f|
    - resource.class.invite_key_fields.each do |field|
      .form-group
        = f.email_field :email, class: 'form-control login width40per', placeholder: 'Email', autofocus: true
      .form-group
        = f.text_field :first_name, class: 'form-control login width20per first_name', placeholder: 'First Name'
      .form-group
        = f.text_field :last_name, class: 'form-control login width20per', placeholder: 'Last Name'
      .form-group
        = f.select :role, User::Roles.last(2).collect{|i| [ i.titleize, i]}, {prompt: 'Select a Role'}, class: 'form-control login width20per'
        %br/
    %button.btn.btn-warning{:type => "submit"}=t("devise.invitations.new.submit_button").titleize

- content_for :title do
  À La Carte
.page-heading
  %h1 À La Carte
.container-fluid
  - plans = @package.plans.group_by(&:key)
  %div{"data-widget-group" => "group1"}
    .row
      .col-md-4.col-sm-6
        .panel.panel-default.p-lg
          - plan = plans['seo_audit_lite'].first
          .panel-head
            %i.clickx-icon-seo.ico-60.pr-sm.text-info
            %h2.pt-header-caption.text-info SEO Audit - Lite
            .pt-header-price
              = number_to_currency(plan.amount, precision: 0)
          .panel-body.p-n
            %hr
              %ul.package-list
                %li Actionable Strategy in Google Slides
                %li Full Site Analysis
                %li On-Site Evaluation
                %li Off-Site Evaluation
                %li Technical SEO Audit
                %li Maximum Pages < 250
              %a.btn.btn-info.btn-block.btn-lg.mt-xl.m-n{href: business_checkout_path(package: 'ala_carte', plan: plan.key)}
                Get Started
                %i.pl-sm.fa.fa-angle-double-right
                .ripple-container
      .col-md-4.col-sm-6
        .panel.panel-default.p-lg
          - plan = plans['google_ads_audit'].first
          .panel-head

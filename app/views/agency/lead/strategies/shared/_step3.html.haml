.spacer50
%h2.mt-2.mb-3.regsubt
  Customize Strategy
  %button.btn.btn-sm.btn-reset-sm.btn-warning.btn-reset-m-0{value: 'reorder_items', type: 'submit', name: 'submit'}
    Reorder Items
  %small.font-14 Pick items from the right and customize as needed
.row
  .col-md-6
    %h4 Client Strategy
    .panel-group
      #strategies.p-n.ui-sortable
        - lead_strategy.strategies.each_with_index do |strategy, index|
          = render 'agency/lead/strategies/shared/strategy_item', strategy: strategy, lead: lead, uniq_id: "#{lead_strategy.id}_#{index}"
  .col-md-6
    = render 'agency/lead/strategies/shared/available_items', lead: lead, strategy_items: strategy_items

- if @links_expiring_today.present?
  %tr
    %td{:align => "center", :style => "padding: 40px 0 0; text-align: center;"}
  %tr
    %td{:style => "color: #646464; font-size: 25px; line-height: 25px; font-weight: bold; padding: 0 0 10px; text-align:center;"}
      Signup Links expiring today
  %tr
    %td{:style => "color: #646464; font-size: 18px; line-height: 28px; font-weight: bold; padding: 0;"}
      %table{:style => "width: 100%; max-width: 680px; margin: 20px auto;font-size: 15px; line-height: 25px; font-weight: normal;"}
        %tbody
          %tr{:bgcolor => "#fFF"}
            %td{:style => "font-family:'Helvetica Neue','Helvetica',Helvetica,Arial,sans-serif;line-height:15px;margin:0;padding-left:16px;width:35%;"} First Name
            %td{:style => "font-family:'Helvetica Neue','Helvetica',Helvetica,Arial,sans-serif;line-height:15px;margin:0;padding:6px 3px;width:35%;"} Last Name
            %td{:style => "font-family:'Helvetica Neue','Helvetica',Helvetica,Arial,sans-serif;line-height:15px;margin:0;padding:6px 3px;width:60%;"} Email
            %td{:style => "font-family:'Helvetica Neue','Helvetica',Helvetica,Arial,sans-serif;line-height:15px;margin:0;padding:6px 3px;width:60%;"} Company
            %td{:style => "font-family:'Helvetica Neue','Helvetica',Helvetica,Arial,sans-serif;line-height:15px;margin:0;padding:6px 16px;width:60%;"} URL
          - @links_expiring_today.each_with_index do |link, index|
            %tr{:bgcolor => "#{index.odd? ? '#FFF' : ''}"}
              %td{:style => "font-size: 13px; color:#4f88bf;font-family:'Helvetica Neue','Helvetica',Helvetica,Arial,sans-serif;margin:0;padding-left:16px;"}= link.first_name
              %td{:style => "font-size: 13px; font-family:'Helvetica Neue','Helvetica',Helvetica,Arial,sans-serif;line-height:13px;margin:0;padding:6px 3px;width:12%;"}= link.last_name
              %td{:style => "font-size: 13px; font-family:'Helvetica Neue','Helvetica',Helvetica,Arial,sans-serif;line-height:13px;margin:0;padding:6px 3px;width:12%;"}= link.email
              %td{:style => "font-size: 13px; font-family:'Helvetica Neue','Helvetica',Helvetica,Arial,sans-serif;line-height:13px;margin:0;padding:6px 3px;width:12%;"}= link.company
              %td{:style => "font-size: 13px; font-family:'Helvetica Neue','Helvetica',Helvetica,Arial,sans-serif;line-height:13px;margin:0;padding:6px 16px;width:12%;"}
                %a{href: link.url, target:"_blank"} Click

.pb-md.page-heading.no-margin-bottom
  %h1
    %i.clickx-icon-academy.title-icon>
    Academy

.container-fluid
  .row
    .col-md-12.text-center.mb-lg
      %button.btn.btn-white.btn-raised.mt-n{ 'title': 'View videos of {{category}}', 'ng-repeat': "category in categories", 'ng-click': "get_academy_videos(category)", 'ng-class': "{'btn-active': selected_category == category}"} {{category}}
  .row
    %div{masonry: ""}
      .masonry-brick.col-lg-4.col-md-6.col-sm-6.col-xs-12{'ng-repeat': "video in videos"}
        .panel.panel-default
          .panel-heading
            %h2 {{video.title}}
          .panel-body.no-padding
            .video{'ng-bind-html': "renderHtml(video.embed_code)"}

- content_for :custom_assets do
  = stylesheet_link_tag 'agreement', media: 'all', 'data-turbolinks-track': false
  %script{src: 'https://cdn.jsdelivr.net/npm/signature_pad@2.3.2/dist/signature_pad.min.js'}
%ul.stages
  - if steps.include?('plan')
    %li.completed
      .stage-data
        .stages-number
          %i.material-icons check
        .stages-title Plan
  - if steps.include?('client')
    %li.completed
      .stage-data
        .stages-number
          %i.material-icons check
        .stages-title Client
  - if steps.include?('agreement')
    %li.current
      .stage-data
        .stages-number
          %i.material-icons check
        .stages-title Agreement
  - if steps.include?('payment')
    %li
      .stage-data
        .stages-number
          %i.material-icons check
        .stages-title Payment
  - if steps.include?('success')
    %li
      .stage-data
        .stages-number
          %i.material-icons check
        .stages-title Complete
  - if steps.include?('kick_off')
    %li
      .stage-data
        .stages-number
          %i.material-icons check
        .stages-title Kick-Off
  - if steps.include?('questionnaire')
    %li
      .stage-data
        .stages-number
          %i.material-icons check
        .stages-title Questionnaire
.checkout-stages--content.mt-xxl.agreement_section
  .panel.panel-default.p-xxl.p-lg--sm
    .panel-body.pl-n.pr-n
      = render 'agency/agreements/shared/form', agency: current_agency, section: 'checkout'
  .text-center
    %a.btn.btn-lg.m-n.btn-warning.btn-raised.step_complete.agreement-next-btn{href: 'javascript:void(0)', data: {next_step: next_step, current_step: 'agreement'}} Continue
:javascript
  $(function() {
    $('.agreement_submit').addClass('invisible')
  })

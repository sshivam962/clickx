#newCompetitionModal.modal.fade.in{"aria-hidden" => "false", "aria-labelledby" => "newCompetitionModal", :role => "dialog", :tabindex => "-1"}
  .d-lg-flex.align-items-center.h-lg-cover.pt-5.pb-5
    .modal-dialog.clx-modal.spl-modal.modal-darkstone-blue-bg
      .modal-content.modal-content--rounded
        .modal-header
          Competitors
          %a.close.pl-md{"data-dismiss" => "modal"}
            %span
              %i.material-icons close
        .modal-body
          .md-dialog-content
            .row
              .keyword-enter-form.clearfix
                .form-group.m-n.p-n.col-sm-12
                  = form_for Competition.new, url: business_client_competitions_path, method: :post, remote: true do |f|
                    %label.col-md-12.control-label.m-n.p-n
                      Add Competitor
                    .row
                      .col-sm-12
                        = f.text_field :name, class: 'form-control login display-inline funnel-input', placeholder: "Enter your competitors domain name"
                    .modal-footer
                      = f.submit 'Add', class: 'btn btn-warning m-n'
                      %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close



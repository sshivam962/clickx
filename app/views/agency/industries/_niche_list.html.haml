- if @agency_niches_access.present?
  - if @agency_niches_access.pluck(:full_access).include?(true)
    - full_access = true
    - industries_ids = []
  - else
    - full_access = false
    - industries_ids = @agency_niches_access.first.industries_ids
- else
  - full_access = false
  - industries_ids = []
- has_access = policy(current_agency).case_study? == false || full_access


%table.table.table-bordered.users.reports
  %thead
    %th Name
    %th Email
    %th Invitation Status
    %th Last Seen At
    %th Invitation Sent
    %th.text-center Email Alerts
    %th.text-center Admin Action
  %tbody
    - users.each do |user|
      %tr{id: dom_id(user)}
        %td= user.name
        %td= user.email
        %td= user.invitation_status
        %td= days_since(user.last_seen)
        %td= days_since(user.invitation_sent_at)
        %td.center
          = form_for user, url: super_admin_admin_user_path(user), method: :patch, remote: true do |f|
            = f.check_box :email_alert, class: 'email_alert_check'

        %td.center
          - if user.email != current_user.email && !user.full_access
            %span
              %a.btn.btn--outline.btn--white{href: edit_super_admin_user_path(user)}
                %i.fa.fa-pencil

              = link_to super_admin_admin_user_path(user), class: 'btn btn-danger', remote: true, method: :delete, data: { confirm: "Are you sure you'd like to Delete #{user.name}?"} do
                %i.fa.fa-trash
.spacer30
.row
  .col-md-4.col-lg-4.col-sm-12.pt-sm
    = page_entries_info users
  .col-md-8.col-lg-8.col-sm-12.right_align
    = will_paginate users, params: {name: params[:name]}
:javascript
  $('.pagination a').attr('data-remote', 'true');

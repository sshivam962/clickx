- content_for :title do
  Set Password

.col-md-10.col-sm-12.col-xs-12.col-md-offset-1.col-sm-offset-0.col-xs-offset-0
  .col-md-offset-3.col-sm-offset-3.col-md-6.col-sm-6.p-lg
    %p.titile.text-center.text-white
      = "#{t('devise.invitations.edit.header').titleize} for "
      %span.link #{resource.email}
    = form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f|
      = f.hidden_field :invitation_token
      .form-group
        %i.glyphicon.glyphicon-user
        = f.password_field :password, class: 'form-control login', placeholder: 'Enter New Password', autofocus: true, autocomplete: 'off'
      .form-group
        %i.glyphicon.glyphicon-user
        = f.password_field :password_confirmation, class: 'form-control password', placeholder: 'Password Confirmation'
      %button.btn.btn-warning{type: 'submit'} Set My Password
    / .row
    /   .col-sm-12.p-lg.split-warp
    /     .split
    /       .or OR
    /   .col-sm-12.f-s-sm.text-white.f-w-sm.inlineb
    /     %p.social-link Sign in with
    /     = link_to user_facebook_omniauth_authorize_path(auth: true), class: 'social-signin facebook inlineb' do
    /       %i.fa.fa-facebook.m-n
    /     = link_to user_google_oauth2_omniauth_authorize_path(auth: true), class: 'social-signin google inlineb' do
    /       %i.fa.fa-google.m-n

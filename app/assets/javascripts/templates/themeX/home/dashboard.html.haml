.container-fluid
  %div{'ng-resize':"deviceWidth"}
    .row
      .col-md-12
        %md-button.md-raised.md-default.pull-right.mt-md.mb-xs.pr-md.pl-md{'ng-click': 'load_datewise_analytics($event)'}
          %i.fa.fa-calendar
          &nbsp;
          {{selectedRange.dateStart | date}} - {{selectedRange.dateEnd | date}}
          &nbsp;
          %i.fa.fa-caret-down
        %ul#dashboard{"ng-model":"hubPageOrderlog", 'ui-sortable':"sortableOptions"}
          %li{'ng-repeat':"pages in hubPageOrderlog", 'ng-show': "{{pages.status}}" , 'ng-class':"deviceWidth < 767? 'fullWidth':'{{pages.classWidth}}'"}
            %div{'ng-include':"", src: "getNewUrl(pages.title)"}
%script{type: "text/ng-template", id: "set_goals"}
  %md-dialog.width50.selectPages{"aria-label" => "Set Goals"}
    %md-toolbar.darkstone_blue
      .md-toolbar-tools
        %h2.white
          %b Marketing Performance
        %span{:flex => ""}
        %md-button.md-icon-button{ "ng-click" => "cancel()" }
          %md-icon{ "aria-label" => "Close dialog" }
            %i.material-icons highlight_off
    %md-dialog-content
      .md-dialog-content{ "name": "Goals" }
        %md-input-container.md-block
          %label Visits per month
          %input{ :min => "1", :name => "visits", "ng-model" => "visits", :required => "", :step => "any", :type => "number" }
        %md-input-container.md-block
          %label Contacts per month
          %input{ :min => "1", :name => "contacts", "ng-model" => "contacts", :required => "", :step => "any", :type => "number" }
        %md-input-container.md-block
          %label Customers per month
          %input{ :min => "0", :name => "contacts", "ng-model" => "customers", :required => "", :step => "any", :type => "number" }
        %md-input-container.md-block
          .col-md-6.bdr-line.p-sm.text-center.bdr-b-red.btn-pointer
            %h4.mt-n.mb-n.pt-xs
              %p.mt-n.mb-sm Contacts to Customers
              %p.lg-count {{ (customers/contacts*100).toFixed(2)+'%' || '-' }}
          .col-md-6.bdr-line.p-sm.text-center.bdr-b-green.btn-pointer
            %h4.mt-n.mb-n.pt-xs
              %p.mt-n.mb-sm Visits to Contacts
              %p.lg-count {{ (contacts/visits*100).toFixed(2)+'%' || '-' }}
    %md-dialog-actions{:layout => "row"}
      %span{:flex => ""}
      %md-button.md-raised.accent_red.white{ "ng-click": "setMarketingGoals(visits, contacts, customers);" }
        Set Goal
      %span{ 'flex': '', 'ng-if': 'goal_present'}
      %md-button.md-raised.darkstone_blue.white{ "ng-click": "removeGoal();", 'ng-if': 'goal_present' }
        Remove Goal
      %span{:flex => ""}

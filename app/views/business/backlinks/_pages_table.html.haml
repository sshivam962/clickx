.panel.panel-default
  .panel-body.p-n.pt-md
    .col-md-12
      .col-sm-12.p-n
        .table-responsive
          %table.table.table-hover.table-vam.table-striped.text-muted
            %thead
              %tr
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Page category and URL." }
                    = link_to 'PAGE', pages_business_backlinks_path(order_by: 'URL', order: sort_order), style: 'color:#949494;', remote: true
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Number of external backlinks to the pages." }
                    = link_to 'EXTERNAL BACKLINKS', pages_business_backlinks_path(order_by: 'ExtBackLinks', order: sort_order), style: 'color:#949494;', remote: true
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Total referring domains to the pages." }
                    = link_to 'REFERRING DOMAINS', pages_business_backlinks_path(order_by: 'RefDomains', order: sort_order), style: 'color:#949494;', remote: true
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Trust Flow." }
                    = link_to 'TF', pages_business_backlinks_path(order_by: 'TrustFlow', order: sort_order), style: 'color:#949494;', remote: true
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Citations Flow." }
                    = link_to 'CF', pages_business_backlinks_path(order_by: 'CitationFlow', order: sort_order), style: 'color:#949494;', remote: true
                %th.f-w-md
                  %u.help_pointer{ "data-placement" => "top", "data-toggle" => "tooltip", :title => "Last updated date of the displayed data." }
                    = link_to 'LAST SEEN', pages_business_backlinks_path(order_by: 'Date', order: sort_order), style: 'color:#949494;', remote: true
            %tbody
              - @pages.each do |page|
                %tr
                  %td
                    = page.page
                  %td
                    = page.external_backlinks
                  %td
                    = page.referring_domains
                  %td
                    = page.trust_flow
                  %td
                    = page.citation_flow
                  %td
                    = page.date

    .ui-2020
      .row.pagination-wrapper
        .pagination
          = will_paginate @pages

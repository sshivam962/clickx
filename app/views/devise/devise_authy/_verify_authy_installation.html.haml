.header.no-bottom-border
  %h2= I18n.t('submit_token_title', {:scope => 'devise'})

.login-form.enable_2fa_form
  = verify_authy_installation_form do
    .form-group.row
      .col-xs-12.col-sm-6.col-md-3
        = text_field_tag :token, "", :autocomplete => :off, :id => 'authy-token', class: 'form-control'
      .col-xs-12.col-sm-6.col-md-3
        = authy_request_sms_link
        &nbsp;&nbsp;
        = submit_tag I18n.t('enable_my_account', {:scope => 'devise'}), :class => 'btn btn-success'

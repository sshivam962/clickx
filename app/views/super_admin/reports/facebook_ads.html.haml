- content_for :title do
  Ad Report Summary - Facebook
%div.clearfix
  %h3
    Ad Report Summary - Facebook
= hidden_field_tag :agency_ids, @agencies.pluck(:id).uniq.join(',')
- @agencies.each do |agency|
  %div
    %div.clearfix
      %h4
        = agency.name
    %table.table.table-bordered.users.reports
      %thead
        %th{rowspan: 2} Business Name
        %th{colspan: 9}
          = Date.today.strftime('%B')
        %th{colspan: 9}
          = 1.month.ago.strftime('%B')
        %th{colspan: 9}
          = 2.months.ago.strftime('%B')
      %thead
        %th{rowspan: 2}
        %th Clicks
        %th Link Clicks
        %th Impressions
        %th CTR
        %th CPC
        %th Spend
        %th Reach
        %th Frequency
        %th Conversion

        %th Clicks
        %th Link Clicks
        %th Impressions
        %th CTR
        %th CPC
        %th Spend
        %th Reach
        %th Frequency
        %th Conversion

        %th Clicks
        %th Link Clicks
        %th Impressions
        %th CTR
        %th CPC
        %th Spend
        %th Reach
        %th Frequency
        %th Conversion
      %tbody{id: "facebook_clients_#{agency.id}"}
:javascript
  $(document).ready(function() {
    agency_ids = $('#agency_ids').val().split(',')
    $.each(agency_ids, function( index, agency_id ) {
      $.ajax({
        url: "/s/reports/facebook_clients?agency_id=" + agency_id,
        type: 'get',
        data: {},
        dataType: 'script',
        success:function(response){
        }
      })
    });
  });

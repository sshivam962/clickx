
%table{:align => "center", :bgcolor => "#f5f7fa", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
  %tr
    %td{:valign => "top", :width => "100%"}
      %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
        %tr
          %td{:width => "100%"}
            %table.table_scale{:bgcolor => "#ffad00", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tr
                %td{:align => "center", :width => "100%"}
                  %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                    %tr
                      %td.spacer{:width => "30"}
                      %td{:width => "540"}
                        / START OF COLUMN
                        %table.full{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "border-collapse:collapse; mso-table-lspace:0pt; mso-table-rspace:0pt;", :width => "540"}
                          %tr
                            %td{:height => "20"}  
                          / START OF HEADING
                          %tr
                            %td.center{:align => "center", :style => "padding-bottom: 5px; font-weight: 400; font-family: 'Open Sans', Helvetica, Arial, sans-serif; color:#ffffff; font-size:24px; line-height:34px; mso-line-height-rule: exactly;"}
                              %span
                                Your Reviews Update for
                                = Date.today.strftime("%b #{Date.today.day.ordinalize}")
                          %tr
                            %td{:height => "20"}  
                      %td.spacer{:width => "30"}

%table{:align => "center", :bgcolor => "#F5F7FA", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
  %tr
    %td{:valign => "top", :width => "100%"}
      %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
        %tr
          %td{:width => "100%"}
            %table.table_scale{:bgcolor => "#FFF", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tr
                %td{:align => "center", :width => "100%"}
                  %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                    %tr
                      %td.spacer{:width => "30"}
                      %td{:width => "540"}
                        / START OF COLUMN
                        %table.full{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "border-collapse:collapse; mso-table-lspace:0pt; mso-table-rspace:0pt;", :width => "540"}
                          %tr
                            %td{:height => "30"}
                              %img{:alt => "", :border => "0", :height => "1", :src => "https://s3.amazonaws.com/clickx-images/email/blank.gif", :title => "", :width => "1"}/
                          %tr
                            %td.content-block
                              %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                                %tr
                                  %td.content-block{:align => "center", :style => "color:#3f4252;font-size:28px;font-family: 'Open Sans', Helvetica, Arial, sans-serif;font-size:28px;text-transform:uppercase;"}
                                    %span{:style=>"text-transform:uppercase"}
                                      = @business.name
                                      Reviews
                          %tr
                            %td{:height => "20"}
                              %img{:alt => "", :border => "0", :height => "1", :src => "https://s3.amazonaws.com/clickx-images/email/blank.gif", :title => "", :width => "1"}/
                      / END COLUMN
                      %td.spacer{:width => "30"}

- @reviews.each do |review_info|
  %table{:align => "center", :bgcolor => "#F5F7FA", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tr
      %td{:valign => "top", :width => "100%"}
        %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
          %tr
            %td{:width => "100%"}
              %table.table_scale{:bgcolor => "#FFF", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                - if review_info[0].present?
                  %tr
                    %td
                      %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                        %tr
                          %td
                            %center
                              %h4{:style=>"text-align:center;margin: 0 0 5px"}
                                = review_info[0]
                - if review_info[1].present?
                  - review_info[1].each  do |review|
                    %tr
                      %td{:align => "center", :width => "100%"}
                        %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                          %tr
                            %td.spacer{:width => "30"}
                            %td{:width => "540"}
                              / START OF COLUMN
                              %table.full{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "border-collapse:collapse; mso-table-lspace:0pt; mso-table-rspace:0pt;", :width => "540"}
                                %tr
                                  %td{:height => "25"}
                                    %img{:alt => "", :border => "0", :height => "1", :src => "https://s3.amazonaws.com/clickx-images/email/blank.gif", :title => "", :width => "1"}/
                                %tr
                                  %td.content-block{:align => "left", :width => "420"}
                                    %table.content-block{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => 420}
                                      %tr
                                        %td.content-block.with-image{:align => "left", :style => "font-family:'Open Sans', serif;font-size:18px;color:#03A9F4;", :width => 32}
                                          %table{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :width=>32}
                                            %tr
                                              %td
                                                .content-block-img{:style => "display:inline-block;"}
                                                  - review_directory = "#{review.directory}.png"
                                                  %img{:alt => "", :src => "https://s3.amazonaws.com/clickx-images/rev_directories/#{review_directory}", :style=>"border-radius: 50%;", :height=>30,:valign=>"center"}/
                                        %td.content-block.with-near-image{:align => "left", :style => "font-family:'Open Sans', serif;font-size:18px;color:#03A9F4;", :width => 390}
                                          %table{:width => 390,:border => "0", :cellpadding => "0", :cellspacing => "0"}
                                            %tr
                                              %td{:valign=>"center"}
                                                %h4.author-title{:style=>"margin: 2px 0 10px;overflow:hidden;padding: 0 3px",:valign=>"center"}
                                                  - if review.author
                                                    = review.author
                                                  - else
                                                    = review.email
                                  %td{:align=>"right",:width=>100}
                                    %table.content-block{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => 100}
                                      %tr
                                        %td.content-block{:align => "left", :width => 100}
                                          - review_star = "#{(review.rating.to_i).to_s}-star.png"
                                          %img.reviews-stars{:alt => "", :height => "23", :src => "https://s3.amazonaws.com/clickx-images/star_rating/#{review_star}", :title => ""}/
                                %tr
                                  %td{:colspan=>2}
                                    %tablecontent-block{:align => "left",:border => "0", :cellpadding => "0", :cellspacing => "0"}
                                      %tr
                                        %td.content-block{:align => "",:colspan=>2, :style => "font-family:'Open Sans', serif;font-size:14px;color:#424554;"}
                                          = review.timestamp.strftime("#{review.timestamp.day.ordinalize} %B %Y")
                                %tr
                                  %td{:colspan=>2}
                                    %table.content-block{:align => "left", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                                      %tr
                                        %td{:height => "10"}
                                          %img{:alt => "", :border => "0", :height => "1", :src => "https://s3.amazonaws.com/clickx-images/email/blank.gif", :title => "", :width => "1"}/
                                      %tr
                                        %td{:align=>"left",:style => "font-size:14px;font-family:'Open Sans', serif;color:#535353;line-height:25px; width:100%;"}
                                          -#We live in Thame and eat here quite regularly with our two young children. The food is all of your normal mainstream Italian restaurant staples, but I wouldn't let that put you off, as the quality is consistently good. The Thame property is in attractive property in the middle of the town, arranged on 2 floors. The tables are packed in quite a bit, so the place is quite noisy when it's busy.
                                          = review.text
                                %tr
                                  %td{:height => "25"}
                                    %img{:alt => "", :border => "0", :height => "1", :src => "https://s3.amazonaws.com/clickx-images/email/blank.gif", :title => "", :width => "1"}/
                              / END COLUMN
                            %td.spacer{:width => "30"}



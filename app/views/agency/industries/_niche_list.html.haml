.bg-sky-blue.rounded.border-1.border-blue
  .bg-white.rounded-t-12.py-4.px-5
    .fs-md.color-dark-blue.fw-m Pinned
  .p-lg-5.p-4
    - if (has_access || industries_ids.present?) && @fav_industries.present?
      .niche-list.niche-list--preloader
        - (@fav_industries.to_a - [Industry.other]).each do |industry|
          - next if industry.case_studies.published.size.zero?
          - if industry.funnel_page.present?
            = render 'niche_item', has_access: has_access, industry: industry, my_case_study: 0, favorite: true, industries_ids: industries_ids
    - else
      %i.fa.fa-heart.mr-3.text-red
      %span.fs-xxs

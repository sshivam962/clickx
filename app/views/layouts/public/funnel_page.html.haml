!!!
%html
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type'}
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    %meta{content: 'yes', name: 'apple-mobile-web-app-capable'}
    %meta{content: 'yes', name: 'apple-touch-fullscreen'}
    %meta{content: 'Click admin dashboard', name: 'description'}
    %meta{content: 'Clickx', name: 'author'}

    %title= yield(:title)

    =# stylesheet_link_tag 'themeX_base', media: 'all', 'data-turbolinks-track': false
    %link{href: "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel: "stylesheet", integrity: "sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin: "anonymous"}
    - if @funnel_page&.css.present?
      %link{href: @funnel_page&.css, rel: 'stylesheet'}
    - else
      = stylesheet_link_tag 'public/funnel_page', media: 'all', 'data-turbolinks-track': false

    = javascript_include_tag 'plain', 'data-turbolinks-track': true

    = csrf_meta_tags
    = render partial: "layouts/favicon", locals: { agency_logo: @agency.favicon }

  %body.bg-white.animated-content
    - unless @no_header
      %header.site-header{style: "background:#{@agency.case_study_portfolio_header_color}"}
        .container
          .site-logo.text-center
            - if @agency.weburl.present?
              %a{href: formatted_url(@agency.weburl), target: '_blank'}
                = image_tag @agency.logo || ''
            - else
              = image_tag @agency.logo || ''
    = yield

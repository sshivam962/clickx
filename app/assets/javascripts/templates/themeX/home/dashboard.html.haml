%script{type:"text/ng-template",id:'competitionDeleteModalHub.html'}
  %md-dialog.modal-dialog.modal-lg.clx-modal.modal-darkstone-blue-bg.modal-compressed
    .modal-header
      %button.close{"aria-hidden" => "true", "ng-click": "cancelIt()" , type: "button"}
        %span.fa.fa-times-circle-o
      %h3.modal-title
        Confirm Delete Competition
    %md-dialog-content
      .modal-dialog-content
        .container-fluid
          .form-group
            %table.table.table-bordered.text-left.reset-table.small-modal-table
              %tr
                %td Competitor
                %td {{displayCurrentComp.name}}
              %tr
                %td Trust Flow
                %td {{displayCurrentComp.summary.TrustFlow}}
              %tr
                %td Citation Flow
                %td {{displayCurrentComp.summary.CitationFlow}}
              %tr
                %td Indexed Page
                %td {{displayCurrentComp.summary.IndexedURLs}}
              %tr
                %td Linking Domains
                %td {{displayCurrentComp.summary.RefDomains}}
              %tr
                %td Backlinks
                %td {{displayCurrentComp.summary.ExtBackLinks}}
          %div.alert.alert-danger
            Are you  sure to delete Competition {{displayCurrentComp.name}}.
    %md-dialog-actions{layout:'row'}
      .clearfix
        %button.btn.btn-default.btn-raised{"ng-click"=>"cancelIt()"} Cancel
        %button.btn.btn-danger.btn-raised{"ng-click"=>"deleteIt()"} Delete

%script{type:"text/ng-template",id:"competitionAddModal.html"}
  %md-dialog.modal-dialog
  .modal-header
    %button.close{"aria-hidden" => "true", "ng-click": "cancelIt()" , type: "button"}
      %span.fa.fa-times-circle-o
    %h3.modal-title
      %span.fa.fa-cloud
      Competitors
  %form{id:"add_comp_form",name:"addCompDomain","ng-submit"=>"saveCompetionName()"}
    .modal-body
      .form-group
        %label.control-label{for:"competition-name"} Add competitor
        %input.form-control#competition-name{name:'competition_name',placeholder:"Enter your competitor's domain name","ng-model"=>"comp_domain","required"=>"required"}
    .modal-footer
      %a.btn.btn-sm.btn-default.btn-warning-margin-bottom{"ng-click"=>"go_back()",style:"height:38px"} Cancel
      %button.btn.btn-warning.btn-sm.btn-warning-margin-bottom{type:"submit"} Add

- content_for :title do
  New Lead | Clickx

.page-content
  .page-heading.no-margin-bottom
    %h1
      %i.clickx-icon-user.title-icon
      New Lead
  .container-fluid
    .row
      .col-md-12
        .tab-container
          = form_for (@lead || current_agency.leads.new), url: agency_leads_path, method: :post, remote: true, class: 'form-vertical cardy clickx-parsley',"data-parsley-validate": '' do |f|
            = render 'agency/leads/shared/form', f: f

                      %tr{:align => "center"}
                        %td{:align => "center", :style => "padding-bottom:30px;font-family:Arial, sans-serif;", :width => "365"}
                          %a{:href => "#{@location.google_link}", :rel => "noreferrer", :style => "display:block;color:#fff;text-decoration:none;background:#e66878;border-radius:3px;padding:20px 0;", :target => "_blank"} Post a Review on Google
            - if @location.yelp_link.present? && @location.google_link.present?
              %tr
                %td{:align => "center", :style => "padding:0 40px 20px;font-family:Arial, sans-serif;font-size:16px;color:#78828C;line-height:1.3;"}
                  %span You can also review us on
              %tr
                %td{:align => "center", :style => "padding:0 40px 50px;font-family:Arial, sans-serif;font-size:14px;color:#1c1c1c;line-height:1.3;"}
                  %a{:href => "#{@location.google_link}", :rel => "noreferrer", :style => "display:inline-block;width:150px;margin:0 10px;padding:11px 0px;color:#78828c;text-align:center;text-decoration:none;background:#d2d7dc;border-radius:3px;", :target => "_blank"} Post a Review on Google

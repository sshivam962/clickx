#client-questionnaire-links-modal.modal.fade{role: "dialog", tabindex: '-1'}
  .modal-dialog.clx-modal.spl-modal.modal-darkstone-blue-bg{role: 'document'}
    .modal-content
      .modal-header
        Questionnaires - #{@client.name}
        %a.close.pl-md{'data-dismiss': 'modal'}
          %span Ã—
      .modal-body
        - questionnaires.each do |questionnaire|
          .d-sm-flex.flex-wrap.justify-content-between.align-items-center.pb-4.pb-sm-3
            .col
              .author
                = questionnaire[:category]
            .col.pt-1.pt-sm-0
              %a.btn.btn-raised.btn-default.btn-sm.copy_to_clipboard.m-1{href: questionnaire[:link], target: '_blank'}
                %i.fa.fa-external-link.mr-2{'title': 'View'}
                View
              - if questionnaire[:answered]
                %a.btn.btn-raised.btn-default.btn-sm.m-1{href: "/a/client_questionnaires/#{questionnaire[:id]}"}
                  %i.icfont.material-icons{'title': 'View Answers'}
                    question_answer
                  View Answers

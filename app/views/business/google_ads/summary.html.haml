= render 'page_header', daterange: daterange_picker_format(@start_date, @end_date)

.container-fluid
  %div
    .row
      .col-md-12
        = render 'tab_menu', active_tab: 'summary'

      .col-md-12
        .tab-content.summary
          = render 'business/google_ads/summary', data: @ads_data
        .tab-content.budget_pacing
          = render 'business/google_ads/budget_pacing', data: @budget_data

:javascript

  $(function() {
    $('#date_filter').daterangepicker({
      maxDate: new Date(),
      locale: { format: 'MM-DD-YYYY' }
    }).on("change", function() {
      const date_range = $(this).val();
      const [start_date, end_date] = date_range.split(' - ');
      const request_url = `/b/google_ads/summary?start_date=${start_date}&end_date=${end_date}`;

      $.ajax({
        url: request_url,
        type: 'GET',
        dataType: 'script',
        success: function(data) {
        },
        error: function(data) {
          console.log(data);
        }
      });
    });

  });

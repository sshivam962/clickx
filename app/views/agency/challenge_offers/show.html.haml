.page-heading.bg-white.mb-4
  .d-flex.justify-content-between.flex-wrap
    .col.my-2
      %h1 Challenge Offer
.container-fluid
  .challenge-offer-wrapper.mb-4
    .bg-white.p-4.p-md-5.rounded-12
      .d-xl-flex.align-items-center
        .pt-xl-4.text-center.pb-5.pb-xl-0
          %h3.fw-b.text-center.mb-5
            What
            %br/
            You're Going to Get…
          = image_tag 'challenge-offer.png', class: "mx-auto mb-5 mb-xl-0"
        .flex-col.px-xl-5
          .d-flex.justify-content-center.align-items-center.mb-4.pb-5.pb-xl-0
            = image_tag '0-10k-scale-challenge.svg'
            = image_tag 'challenge-only-offer.svg'
          .challenge-offers.pb-5.pb-xl-0
            .challenge-offers--offer
              .col.text-warning.mr-4 ✔
              .col.flex-col.mr-4 All Access to 0-10K SCALE Coaching
              .col.text-red.challenge-offers--offer-price ($5,000 Value)
            .challenge-offers--offer
              .col.text-warning.mr-4 ✔
              .col.flex-col.mr-4 Daily Prospecting Accountability
              .col.text-red.challenge-offers--offer-price ($2,500 Value)
            .challenge-offers--offer
              .col.text-warning.mr-4 ✔
              .col.flex-col.mr-4 Bonus #1 - 3 Months of Clickx Platform
              .col.text-red.challenge-offers--offer-price ($2,397 Value)
            .challenge-offers--offer
              .col.text-warning.mr-4 ✔
              .col.flex-col.mr-4 Bonus #2 - Weekly Agency Training
              .col.text-red.challenge-offers--offer-price ($3,988 Value)
            .challenge-offers--offer
              .col.text-warning.mr-4 ✔
              .col.flex-col.mr-4 Bonus #3 - 5000 Fresh Leads a Month
              .col.text-red.challenge-offers--offer-price ($7,500 Value)
        .text-center
          .d-table.mx-auto
            .mx-5
              .fs-14.fw-b.text-black TOTAL VALUE
              .text-red.fs-xl.fw-b.slashed-price $21,385
              %hr.my-3/
              .fs-14.fw-b.text-black CHALLENGE SPECIAL
              .text-red.fw-b.challenge-offer-price $4997
              .py-4
            = link_to 'Get Started Now', payment_details_agency_challenge_offer_path, class: 'btn btn-blue btn-lg w-100'

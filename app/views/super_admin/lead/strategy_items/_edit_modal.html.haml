#edit-strategy-modal.modal.fade{role: "dialog", tabindex: '-1', data: {backdrop: 'false'}}
  .modal-dialog.clx-modal.spl-modal.modal-darkstone-blue-bg{role: 'document'}
    = form_for strategy_item, url: super_admin_strategy_item_path(strategy_item), method: :put, remote: true do |f|
      .modal-content
        .modal-header
          Edit Strategy Item
          %a.close.pl-md{'data-dismiss': 'modal'}
            %span Ã—
        .modal-body
          .row
            .col-md-12
              = f.cktext_area :strategy, class: 'form-control', placeholder: 'Strategy', id: "lead_strategy_item_text_#{f.object.id}", ckeditor: { toolbar: 'lead_strategy' }
        .modal-footer
          = f.submit 'Save', class: 'btn btn-primary btn-raised'

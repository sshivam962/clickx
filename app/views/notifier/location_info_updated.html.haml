%table{:align => "center", :bgcolor => "#F5F7FA", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
  %tr
    %td{:valign => "top", :width => "100%"}
      %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0"}
        %tr
          %td{:width => "100%"}
            %table.table_scale{:bgcolor => "#FFF", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tr
                %td{:align => "center", :width => "100%"}
                  %table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                    %tr
                      %td.spacer{:width => "30"}
                      %td{:width => "540"}
                        / START OF COLUMN
                        %table.full{:align => "center", :border => "0", :cellpadding => "10", :cellspacing => "0", :style => "border-collapse:collapse; mso-table-lspace:0pt; mso-table-rspace:0pt;", :width => "540"}
                          %tr.cellpadd10{:style => "margin-bottom: 15px"}
                            %td
                              %p #{@business.name}'s location information was just updated by #{@user.name}
                          %tr
                          - @attributes.each do |a|
                            - val = @location.send(a)
                            - if (a == 'operational_hours') && val
                              %tr
                                %td
                              %tr
                                %td Business Hours :
                              - @location.business_hours.each do |wh|
                                %tr
                                  %td
                                    - if wh.status == 'open'
                                      #{wh.days&.titleize} : #{wh.status&.titleize} from #{wh.from} to #{wh.to}
                                    - else
                                      #{wh.days&.titleize} : #{wh.status&.titleize}
                              %tr
                                %td
                            - unless [[], nil, '', true, false].include? val
                              %tr
                                %td
                                  #{a.titleize} : #{val.class.name == 'Array' ? val.join(', ') : val}

                      %td.spacer{:width => "30"}

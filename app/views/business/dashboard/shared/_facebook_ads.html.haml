= Gon::Base.render_data
- if @fb_ads_data.present?
  .d-panel.mb-4
    .row.d-flex.flex-wrap
      .col-xs-12.dpanel-item.mb-5
        .bg-white.br-10.pl-lg.pr-lg.pt-2.pb-2.mb-4
          .d-flex.justify-content-between.flex-wrap
            .col.f-s-20.pt-2.pb-2.color-dark-blue.fw-sb
              Facebook Ads
              / .custom-tooltip
              /   %i.fa.fa-info-circle.color-dark-blue
              /   %span.custom-tooltiptext Displays the analytics of the traffic on your site as per Google Analytics.
            .col.pt-2.pb-2
              .d-flex.align-items-center
                .col.pl-4
                  = link_to business_dashboard_facebook_ads_path(start_date: @start_date&.strftime('%m/%d/%Y'), end_date: @end_date&.strftime('%m/%d/%Y')), class: 'icon-btn-circle', remote: true, method: :get do
                    %i.fa.fa-refresh
        .stat-cards-list
          .stat-cards-list--item
            .stat-card.stat-card--red
              .stat-card-datas
                .stat-data
                  = number_with_delimiter(@fb_ads_data[:total_clicks])
                .stat-name Total Clicks
              .stat-card-icon-wrap
                .stat-card-icon
                  %i.fa.fa-clock-o
              .stat-bg-circle
              .stat-bg-circle.stat-bg-circle2
          .stat-cards-list--item
            .stat-card.stat-card--blue
              .stat-card-datas
                .stat-data
                  = number_with_delimiter(@fb_ads_data[:total_inline_link_clicks])
                .stat-name Link Clicks
              .stat-card-icon-wrap
                .stat-card-icon
                  %i.fa.fa-users
              .stat-bg-circle
              .stat-bg-circle.stat-bg-circle2
          .stat-cards-list--item
            .stat-card.stat-card--green
              .stat-card-datas
                .stat-data
                  = @fb_ads_data[:total_frequency]
                .stat-name Frequency
              .stat-card-icon-wrap
                .stat-card-icon
                  %i.fa.fa-eye
              .stat-bg-circle
              .stat-bg-circle.stat-bg-circle2
        .bg-white.br-10.p-25
          .row.d-flex.flex-wrap
            .col-xs-12.col-12.col-lg-6.mb-3.pb-3.mb-xl-0
              %ul.dpanel-datas-list.row.d-flex.flex-wrap
                %li.col-sm-6.col-xs-12
                  .d-flex.justify-content-between.bg-light-gray.br-10.p-4
                    .col Impressions
                    .col.fw-sb
                      = number_with_delimiter(@fb_ads_data[:total_impressions])
                %li.col-sm-6.col-xs-12
                  .d-flex.justify-content-between.bg-light-gray.br-10.p-4
                    .col Conversion
                    .col.fw-sb
                      = number_with_delimiter(@fb_ads_data[:total_conversion])
                %li.col-sm-6.col-xs-12
                  .d-flex.justify-content-between.bg-light-gray.br-10.p-4
                    .col Total Reach
                    .col.fw-sb
                      = number_with_delimiter(@fb_ads_data[:total_reach])
                %li.col-sm-6.col-xs-12
                  .d-flex.justify-content-between.bg-light-gray.br-10.p-4
                    .col CPC
                    .col.fw-sb
                      = number_to_currency(@fb_ads_data[:total_cpc])
                %li.col-sm-6.col-xs-12
                  .d-flex.justify-content-between.bg-light-gray.br-10.p-4
                    .col CTR
                    .col.fw-sb
                      = "#{@fb_ads_data[:total_ctr]}%"
                %li.col-sm-6.col-xs-12
                  .d-flex.justify-content-between.bg-light-gray.br-10.p-4
                    .col Total Spend
                    .col.fw-sb
                      = number_to_currency(@fb_ads_data[:total_spend])
            .col-xs-12.col-12.col-lg-6
              #chart_fb-ads
